<resources>
    <attr name="gColorBackground" format="color|reference" />
    <attr name="gColorTouch" format="color" />
    <attr name="gFont" format="string" />

    <!-- All -->
    <attr name="fontFamily" format="integer">
        <enum name="roboto" value="0" />
        <enum name="opensans" value="1" />
    </attr>
    <attr name="fontWeight" format="integer">
        <enum name="bold" value="0" />
        <enum name="extrabold" value="1" />
        <enum name="extralight" value="2" />
        <enum name="light" value="3" />
        <enum name="regular" value="4" />
    </attr>
    <attr name="fontExtension" format="string" />
    <attr name="fontPath" format="string" />

    <!-- TextView -->
    <declare-styleable name="TextView">
        <attr name="fontFamily" />
        <attr name="fontWeight" />
        <attr name="fontExtension" />
        <attr name="fontPath" />
    </declare-styleable>

    <declare-styleable name="TouchEffectDrawable">
        <attr name="type" format="integer" />
    </declare-styleable>

    <declare-styleable name="FloatActionButton">
        <attr name="gColorBackground" />
        <attr name="gColorTouch" />
    </declare-styleable>

    <declare-styleable name="Button">
        <attr name="gColorBackground" />
        <attr name="gColorTouch" />
        <attr name="gTouchEffect" format="integer">
            <enum name="none" value="0" />
            <enum name="ease" value="1" />
            <enum name="ripple" value="2" />
            <enum name="move" value="3" />
            <enum name="press" value="4" />
        </attr>
        <attr name="gFont" />

    </declare-styleable>
</resources>
