<resources>

    <!--ALL -->
    <attr name="gBackgroundColor" format="color|reference" />

    <attr name="gBorderSize" format="dimension" />

    <attr name="gFont" format="string" />
    <attr name="gCornerRadius" format="dimension" />
    <attr name="gCornerRadiusTL" format="dimension" />
    <attr name="gCornerRadiusTR" format="dimension" />
    <attr name="gCornerRadiusBL" format="dimension" />
    <attr name="gCornerRadiusBR" format="dimension" />

    <attr name="gTouchColor" format="color" />
    <attr name="gTouchCornerRadius" format="dimension" />
    <attr name="gTouchCornerRadiusTL" format="dimension" />
    <attr name="gTouchCornerRadiusTR" format="dimension" />
    <attr name="gTouchCornerRadiusBL" format="dimension" />
    <attr name="gTouchCornerRadiusBR" format="dimension" />

    <!-- TextView -->
    <attr name="gTextViewStyle" format="reference" />
    <declare-styleable name="TextView">
        <attr name="gFont" />
        <attr name="gBorder">
            <flag name="all" value="0x1111" />
            <flag name="left" value="0x0001" />
            <flag name="top" value="0x0100" />
            <flag name="right" value="0x0010" />
            <flag name="bottom" value="0x1000" />
        </attr>
        <attr name="gBorderSize" />
        <attr name="gBorderColor" format="color|reference" />
    </declare-styleable>

    <!-- FloatActionButton -->
    <attr name="gFloatActionButtonStyle" format="reference" />
    <declare-styleable name="FloatActionButton">
        <attr name="gBackgroundColor" />
        <attr name="gTouchColor" />
    </declare-styleable>

    <!-- Button -->
    <attr name="gButtonStyle" format="reference" />
    <declare-styleable name="Button">
        <attr name="gFont" />
        <attr name="gTouchColor" />
        <attr name="gTouchEffect" format="integer">
            <enum name="none" value="0" />
            <enum name="auto" value="1" />
            <enum name="ease" value="2" />
            <enum name="press" value="3" />
            <enum name="ripple" value="4" />
        </attr>
        <attr name="gTouchCornerRadius" />
        <attr name="gTouchCornerRadiusTL" />
        <attr name="gTouchCornerRadiusTR" />
        <attr name="gTouchCornerRadiusBL" />
        <attr name="gTouchCornerRadiusBR" />
    </declare-styleable>


    <!-- BalloonMarker -->
    <attr name="gBalloonMarkerStyle" format="reference" />
    <declare-styleable name="BalloonMarker">
        <attr name="gMarkerTextAppearance" format="reference" />
        <attr name="gMarkerBackgroundColor" format="color|reference" />
        <attr name="gMarkerElevation" format="dimension" />
    </declare-styleable>

    <!-- SeekBar -->
    <attr name="gSeekBarStyle" format="reference" />
    <declare-styleable name="AbsSeekBar">
        <attr name="gMin" format="integer" />
        <attr name="gMax" format="integer" />
        <attr name="gValue" format="integer" />

        <attr name="gTickSize" format="dimension" />
        <attr name="gThumbSize" format="dimension" />
        <attr name="gTouchSize" format="dimension" />
        <attr name="gTrackStroke" format="dimension" />
        <attr name="gScrubberStroke" format="dimension" />

        <attr name="gMirrorForRtl" format="boolean" />
        <attr name="gAllowTrackClickToDrag" format="boolean" />

        <attr name="gRippleColor" format="color|reference" />
        <attr name="gScrubberColor" format="color|reference" />
        <attr name="gTrackColor" format="color|reference" />
        <attr name="gThumbColor" format="color|reference" />

        <attr name="gIndicator">
            <enum name="none" value="0" />
            <enum name="balloon" value="1" />
        </attr>
        <attr name="gIndicatorBackgroundColor" format="color|reference" />
        <attr name="gIndicatorFormatter" format="string|reference" />
        <attr name="gIndicatorTextAppearance" format="reference" />
    </declare-styleable>

    <!-- CheckBox -->
    <attr name="gCheckBoxStyle" format="reference" />
    <declare-styleable name="CheckBox">
        <attr name="gBorderSize" />
        <attr name="gIntervalSize" format="dimension" />
        <attr name="gMarkSize" format="dimension" />
        <attr name="gMarkColor" format="color|reference" />
    </declare-styleable>
</resources>
