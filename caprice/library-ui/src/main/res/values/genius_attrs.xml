<resources>
    <attr name="g_theme" format="reference" />
    <attr name="g_fontFamily" format="integer">
        <enum name="roboto" value="0" />
        <enum name="opensans" value="1" />
    </attr>
    <attr name="g_fontWeight" format="integer">
        <enum name="bold" value="0" />
        <enum name="extrabold" value="1" />
        <enum name="extralight" value="2" />
        <enum name="light" value="3" />
        <enum name="regular" value="4" />
    </attr>
    <attr name="g_fontExtension" format="string" />

    <attr name="g_cornerRadius" format="dimension" />
    <attr name="g_borderWidth" format="dimension" />

    <attr name="g_textAppearance" format="integer">
        <enum name="none" value="0" />
        <enum name="dark" value="1" />
        <enum name="light" value="2" />
    </attr>

    <attr name="g_cornerRadii_A" format="dimension" />
    <attr name="g_cornerRadii_B" format="dimension" />
    <attr name="g_cornerRadii_C" format="dimension" />
    <attr name="g_cornerRadii_D" format="dimension" />

    <!-- GeniusCheckBox -->
    <declare-styleable name="GeniusCheckBox">
        <attr name="g_theme" />

        <attr name="g_ringWidth" format="dimension" />
        <attr name="g_circleRadius" format="dimension" />

        <attr name="g_checked" format="boolean" />
        <attr name="g_enabled" format="boolean" />
    </declare-styleable>

    <!-- GeniusEditText -->
    <declare-styleable name="GeniusEditText">
        <attr name="g_theme" />
        <attr name="g_fontFamily" />
        <attr name="g_fontWeight" />
        <attr name="g_fontExtension" />
        <attr name="g_textAppearance" />
        <attr name="g_cornerRadius" />
        <attr name="g_borderWidth" />

        <attr name="g_cornerRadii_A" />
        <attr name="g_cornerRadii_B" />
        <attr name="g_cornerRadii_C" />
        <attr name="g_cornerRadii_D" />

        <attr name="g_fieldStyle" format="integer">
            <enum name="fill" value="1" />
            <enum name="box" value="2" />
            <enum name="transparent" value="3" />
            <enum name="line" value="4" />
        </attr>

        <attr name="g_showTitle" format="boolean" />
        <attr name="g_titleTextColor" format="reference|color" />
        <attr name="g_titleTextSize" format="dimension" />
        <attr name="g_titlePaddingTop" format="dimension" />
        <attr name="g_titlePaddingLeft" format="dimension" />
    </declare-styleable>
</resources>
