<resources>

    <style name="AbsSeekBarStyle">
        <item name="gMirrorForRtl">true</item>
        <item name="gAllowTrackClickToDrag">true</item>

        <item name="gMin">0</item>
        <item name="gMax">100</item>
        <item name="gValue">0</item>

        <item name="gTickSize">@dimen/genius_seekBar_tickSize</item>
        <item name="gThumbSize">@dimen/genius_seekBar_thumbSize</item>
        <item name="gTouchSize">@dimen/genius_seekBar_touchSize</item>
        <item name="gTrackStroke">@dimen/genius_seekBar_trackStroke</item>
        <item name="gScrubberStroke">@dimen/genius_seekBar_scrubberStroke</item>

        <item name="gRippleColor">@color/g_default_ripple_color</item>
        <item name="gScrubberColor">@color/g_default_progress_color</item>
        <item name="gTrackColor">@color/g_default_track_color</item>
        <item name="gThumbColor">@color/g_default_progress_color</item>
        <item name="gIndicatorBackgroundColor">@color/g_progress_color</item>

        <item name="gIndicatorTextAppearance">@style/BalloonMarkerTextAppearanceStyle</item>
    </style>

    <style name="BalloonMarkerStyle">
        <item name="gMarkerTextAppearance">@style/BalloonMarkerTextAppearanceStyle</item>
        <item name="gMarkerBackgroundColor">@color/g_progress_color</item>
        <item name="gMarkerElevation">@dimen/genius_balloonMarker_elevation</item>
    </style>

    <style name="BalloonMarkerTextAppearanceStyle" parent="android:TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:padding">@dimen/genius_balloonMarker_textAppearance_padding</item>
    </style>

</resources>
